<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- White background inside the EditText -->
    <solid android:color="#000000" />

    <!-- Black border -->
    <stroke
        android:width="2dp"
        android:color="#000000" />

    <!-- Rounded corners -->
    <corners android:radius="20dp" />

    <!-- Optional padding inside the EditText -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>